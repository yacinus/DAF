<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vue.EtatStockActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/back" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/couleurBackgroundAccueil">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logodaf" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Etat du Stock"
                        android:textColor="#062DBD"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="115dp"
                    >

                    <LinearLayout
                        android:id="@+id/linearLayout13"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TableLayout
                                    android:id="@+id/tableLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <TableRow
                                        android:id="@+id/txtRow1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:layout_margin="1dp"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:layout_marginTop="1dp">

                                        <TextView
                                            android:id="@+id/txtDesignation"
                                            android:background="@android:color/darker_gray"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:textStyle="bold"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginTop="1dp"
                                            android:paddingLeft="2dp"
                                            android:textSize="20sp"
                                            android:text="DÃ©signation"/>

                                        <TextView
                                            android:id="@+id/txtCode"
                                            android:background="@android:color/darker_gray"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:textStyle="bold"
                                            android:layout_marginRight="1dp"
                                            android:layout_marginTop="1dp"
                                            android:textSize="20sp"
                                            android:paddingLeft="5dp"
                                            android:text="Code"/>

                                        <TextView
                                            android:id="@+id/txtRestant"
                                            android:background="@android:color/darker_gray"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:textStyle="bold"
                                            android:layout_marginTop="1dp"
                                            android:textSize="20sp"
                                            android:paddingRight="2dp"
                                            android:text="Restant"
                                            android:paddingLeft="5dp"/>

                                    </TableRow>
                                </TableLayout>
                            </LinearLayout>
                        </ScrollView>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

